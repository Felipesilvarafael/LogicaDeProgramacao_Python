# for i in range(5): #Range(5) gera os números de 0 a 4
#     print(i)

######################## WHILE ##########################
# CONCEITO:
# while condição:
    # bloco de código que será repetido enquanto a condição for true

# EXEMPLO BASICO:
# contador = 0
# while contador < 5:
#     print(contador)
#     contador += 1 #Aumenta o contador para evitar loop infinito 
# #Obs: += é igual a (x = x + 1)







